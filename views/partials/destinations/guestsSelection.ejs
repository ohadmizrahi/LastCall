<div class="form-group">
    <div>
        <label for="<%= guest %>"><%= displayGuestName %>:</label>
    </div>
    <div class="input-group ml-2">
        <input type="number" class="form-control" id="<%= guest %>" min="<%= min %>" value="<%= defaultValue %>" required>
        <div class="input-group-append">
            <button class="btn btn-outline-secondary change-value" type="button" data-guest="<%= guest %>" data-step="-1">-</button>
        </div>
        <div class="input-group-append">
            <button class="btn btn-outline-secondary change-value" type="button" data-guest="<%= guest %>" data-step="1">+</button>
        </div>
    </div>
</div>
