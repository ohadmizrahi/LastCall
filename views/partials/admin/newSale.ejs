<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <div id="validDestinations" data-destinations="<%= JSON.stringify(body.validDestinations) %>"></div>

    <div class="card">
        <div class="card-body">
            <form action="/admin/add_sale" method="POST" class="form-with-destination">
                <h1 id="new-sale-heading">Add New Sale</h1>
                <div class="border-top my-3"></div>
                <div class="white-bold">
                    <label for="destination">Destination</label>
                    <input type="text" class="form-control destination-validation" name="destination" placeholder="Destination in Sale"
                        required list="destination-options-new">
                    <datalist class="destination-options" id="destination-options-new">
                    </datalist>
                </div>
                <div class="white-bold">
                    <label for="departure-date">Departure Date</label>
                    <input type="date" class="form-control" name="departureDate" placeholder="The Start Date in Sale"
                        required>
                </div>
                <div class="white-bold">
                    <label for="departure-date">Return Date</label>
                    <input type="date" class="form-control" name="returnDate" placeholder="The End Date in Sale"
                        required>
                </div>
                <div class="border-top my-3"></div>
                <div class="row">
                    <div class="white-bold col-md-6">
                        <label for="new-price">Deal Price</label>
                        <input type="number" class="form-control" name="newPrice" min="20" step="1"
                            placeholder="The New Flight Price - min is 20$">
                    </div>
                    <div class="col-md-1">
                        <p class="text-center">OR</p>
                    </div>
                    <div class="white-bold col-md-5">
                        <label for="new-price">Discount</label>
                        <div class="input-group">
                            <input type="number" class="form-control" name="discount" min="1" step="1"
                                placeholder="The Price Discount">
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="white-bold">
                    <label for="deadline">Sale Deadline</label>
                    <input type="number" class="form-control" name="deadline" placeholder="Sale number of days" min="1"
                        required>
                </div>
                <div class="border-top my-3"></div>
                <button type="submit" class="btn btn-dark btn-lg btn-block">Add Sale</button>
            </form>
        </div>
    </div>
</div>