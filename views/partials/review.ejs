<div class="col-md-10 offset-md-4">
  <div class="review">
    <div class="review-header">
      <div class="author-info">
        <div class="author-initials"><%= review.author.split(' ').map(name => name.charAt(0)).join('') %></div>
        <span class="reviewer-name"><%= review.author %></span>
      </div>
      <span class="review-date"><%= review.date %></span>
    </div>
    <div class="review-body">
      <p class="review-dest destination-text"><%= review.destination %></p>
      <p class="review-rank"><strong>Rank:</strong> <%= review.rank %></p>
      <p class="review-content"><i class="far fa-smile"></i> <%= review.happyContent %></p>
      <p class="review-content"><i class="far fa-frown"></i> <%= review.badContent %></p>
    </div>
  </div>
</div>
