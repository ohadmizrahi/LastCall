<div class="search-bar">
    <form id="flightSearchForm">
      <label class="form-field" for="departure">Departure:</label>
      <input type="text" id="departure" name="departure" required>

      <label class="form-field" for="destination">Destination:</label>
      <input type="text" id="destination" name="destination" required>

      <label class="form-field" for="departureDate">Departure Date:</label>
      <input type="date" id="departureDate" name="departureDate" required>

      <button class="search-flight-submit" type="submit">Search Flights</button>
    </form>
  </div>
  

