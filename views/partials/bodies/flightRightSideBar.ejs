<div id="details-sidebar" class="details-sidebar">
    <div class="sidebar-header">
      <button id="close-sidebar" class="close-sidebar">&times;</button>
      <h3>Flight Details</h3>
    </div>
    <div id="flight-details">
      <p><strong>Flight Number:</strong> <span id="flightNumber"></span></p>
      <p><strong>Date:</strong> <span id="flightDate"></span></p>
      <p><strong>Airline Name:</strong> <span id="airlineName"></span></p>
      <p><strong>Source:</strong> <span id="source"></span></p>
      <p><strong>Departure Airport:</strong> <span id="departureAirport"></span></p>
      <p><strong>Departure Terminal:</strong> <span id="departureTerminal"></span></p>
      <p><strong>Departure Country:</strong> <span id="departureCountry"></span></p>
      <p><strong>Destination:</strong> <span id="destination"></span></p> <!-- Fixed missing quote -->
      <p><strong>Arrival Airport:</strong> <span id="arrivalAirport"></span></p>
      <p><strong>Arrival Terminal:</strong> <span id="arrivalTerminal"></span></p>
      <p><strong>Arrival Country:</strong> <span id="arrivalCountry"></span></p>
      <p><strong>Price:</strong> <span id="price"></span></p>
    </div>
    <button id="continue-btn" class="continue-btn">Continue</button> <!-- Continue button -->
</div>
